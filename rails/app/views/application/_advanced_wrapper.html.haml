-has_advanced_settings = @site.has_advanced_settings?

.advanced.pt-4{style: display_none_when(has_advanced_settings)}
  =render layout: 'field_wrapper' do
    .form-text
      =link_to 'Show advanced settings', '#', onclick: "$('.advanced').toggle(150); return false;"

.advanced.pt-4{style: display_none_when(!has_advanced_settings)}
  =render layout: 'field_wrapper' do
    .form-text
      %h5 Advanced settings

  =yield
